<% content_for :back_link, document_path(@document) %>
<% content_for :title, t("document_topics.edit.title", title: @document.title_or_fallback) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body"><%= t("document_topics.edit.description") %></p>
  </div>

  <div class="govuk-grid-column-one-third">
    <div class="gem-c-related-navigation">
      <nav role="navigation" class="gem-c-related-navigation__nav-section">
        <ul class="gem-c-related-navigation__link-list" data-module="track-click">
          <li class="gem-c-related-navigation__link">
            <a href="https://www.gov.uk/guidance/how-to-publish-on-gov-uk/creating-and-updating-pages#add-topic-tagging" class="gem-c-related-navigation__section-link gem-c-related-navigation__section-link--other">
              <%= t("document_topics.edit.link_guidance") %>
            </a>
          </li>
          <li class="gem-c-related-navigation__link">
            <a href="<%= Plek.new.external_url_for('support') + '/taxonomy_new_topic_request/new' %>">
              <%= t("document_topics.edit.link_suggest_new") %>
            </a>
          </li>
          <li class="gem-c-related-navigation__link">
            <a href="<%= Plek.new.external_url_for('support') + '/taxonomy_change_topic_request/new' %>">
              <%= t("document_topics.edit.link_suggest_change") %>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<% def unroll(topic_content_id) %>
  <li>
    <div class="govuk-checkboxes__item">
    <%= tag.input type: "checkbox",
      id: "topic-#{topic_content_id}",
      class: "govuk-checkboxes__input",
      name: "topics[]",
      value: topic_content_id,
      tabindex: "-1",
      checked: @topic_content_ids.include?(topic_content_id) %>

    <%= tag.label for: "topic-#{topic_content_id}", class:"govuk-label govuk-checkboxes__label" do %>
      <%= @topic_index[topic_content_id][:title] %>
    <% end %>
    </div>

    <% if @topic_index[topic_content_id][:child_topic_content_ids].any? %>
      <ul>
        <% @topic_index[topic_content_id][:child_topic_content_ids].each do |child_topic_content_id| %>
          <% unroll(child_topic_content_id) %>
        <% end %>
      </ul>
    <% end %>
  </li>
<% end %>

<%= form_tag update_document_topics_path(@document), method: :patch do %>
  <h2 class="govuk-heading-m">Selected topics</h2>
  <govuk-breadcrumbs class="govuk-breadcrumbs" id="selected-items" for="miller-columns"></govuk-breadcrumbs>

  <% root_topic = @topic_index[TopicsService::GOVUK_HOMEPAGE_CONTENT_ID] %>
  <govuk-miller-columns id="miller-columns" class="govuk-miller-columns" for="taxonomy" breadcrumbs="selected-items">
  <ul id="taxonomy">
    <% root_topic[:child_topic_content_ids].each do |topic_content_id| %>
      <% unroll(topic_content_id) %>
    <% end %>
  </ul>
  </govuk-miller-columns>

  <%= hidden_field_tag :version, @version %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= render "govuk_publishing_components/components/details", {
        title: t("document_topics.edit.warning_title")
      } do %>
        <%= t("document_topics.edit.warning_description") %>
      <% end %>
    </div>
  </div>

  <%= render "govuk_publishing_components/components/button", {
    text: "Save", margin_bottom: true
  } %>
<% end %>
